<div class="max-w-5xl mx-auto px-4">     
  <form method="post" class="rodauth" role="form" id="login-form">
    <%= rodauth.csrf_tag %>
    <div class="form-group mb-3">
      <label for="login" class="form-label">Login</label>
      <input  autocomplete="email"  required="required"   type="email" class="form-control" name="login" id="login" value=""/> 
    </div>
    <div class="form-group mb-3">
      <label for="password" class="form-label">Password</label>
      <input  autocomplete="current-password"  required="required"   type="password" class="form-control" name="password" id="password" value=""/> 
    </div>
    <div class="form-group mb-3">
      <input type="submit"  class="btn btn-primary" value="Login"/>
    </div>
  </form>
  <h2 class="rodauth-login-form-footer-links-heading">Other Options</h2>
  <ul class="rodauth-links rodauth-login-footer-links">
    <li><a href="/create-account">Create a New Account</a></li>
  </ul>
</div>

