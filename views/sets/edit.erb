<form action="" method="post">
    Weight: <input type="number" id="weight" name="weight" autocomplete="off" value="<%= @set[:weight] %>"><br>
    Reps: <input type="number" id="reps" name="reps" autocomplete="off" value="<%= @set[:reps] %>"><br>
    Completed? <input type="checkbox" id="is_completed" name="is_completed" value="<%= @set[:is_completed] %>"><br>
    Warmup set? <input type="checkbox" id="is_warmup" name="is_warmup" value="<%= @set[:is_warmup] %>" checked><br>
    <select id="exercise_id" name="exercise_id" class="mt-2 block w-full rounded-lg border-0 py-1.5 pl-3 pr-10 text-gray-900 ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-lime-500 sm:text-sm sm:leading-6">
        <%- @exercises.each do |exercise| %>
        <option value="<%= exercise[:id] %>"><%= exercise[:name] %></option>
        <%- end %>
    </select>
    <button type="submit" class="mt-2 rounded-lg bg-lime-500 px-4 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-lime-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-lime-500">
        Save
  </button>
</form>
