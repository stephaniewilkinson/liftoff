
<div class="text-3xl">
  Exercise:
  <%= @exercise[:name] %>
  <br>
  Goal weight:
  <%= @exercise[:goal_weight] %>
</div>
<hr>
<div class="px-4 sm:px-6 lg:px-8">
  <div class="pull-right mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
  </div>
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <table class="min-w-full divide-y divide-gray-300">
          <thead>
            <tr>
              <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Weight</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Reps</th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Completed?</th>
              <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-0">
                <span class="sr-only">Edit</span>
              </th>
              <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-0">
                <span class="sr-only">Edit</span>
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <%- @sets.each do |set| %>
                <tr>
                    <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0"><%= set[:weight] %></td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= set[:reps] %></td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= set[:is_completed] %></td>
                    <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-sm font-medium sm:pr-0">
                      <a href="/workouts/<%= @workout[:id] %>/exercises/<%= @exercise[:id] %>/sets/<%= set[:id] %>/" class="text-indigo-600 hover:text-indigo-900">Show</a>
                    </td>
                    <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-sm font-medium sm:pr-0">
                      <a href="/workouts/<%= @workout[:id] %>/exercises/<%= @exercise[:id] %>/sets/<%= set[:id] %>/edit" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                    </td>
                </tr>
            <%- end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
