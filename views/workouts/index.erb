<div class="px-4 sm:px-6 lg:px-8">
  <div class="sm:flex sm:items-center">
    <div class="sm:flex-auto">
      <h1 class="text-base font-semibold leading-6 text-gray-900">Workouts</h1>
      <p class="mt-2 text-sm text-gray-700">A list of all the workouts.</p>
    </div>
    <div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
      <a href="/workouts/new" type="button" class="block rounded-md bg-lime-500 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-lime-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-lime-500">New workout</a>
    </div>
  </div>
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <table class="min-w-full divide-y divide-gray-300">
          <thead>
            <tr>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                  Date
              </th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                  Sets
              </th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                Show
              </th>
              <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
                Edit
              </th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 bg-white">
            <%- @workouts.each do | workout | %>
              <tr>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= workout[:date].strftime('%b %d, %Y') %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= workout.sets.count %></td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
                <a href="/workouts/<%= workout[:id] %>/">
                  Show
                </a>
              </td>
              <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
              <a href="/workouts/<%= workout[:id] %>/edit/">
                Edit
              </a>
            </td>
              </tr>
            <%- end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
