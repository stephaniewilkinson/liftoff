<a href="/workouts/<%= @workout[:id] %>/sets/new">Add a set</a>
<hr>


<%- @workout.sets.each do | set | %>
  <%= set.exercise[:name] %>
  <%= set[:reps] %>
  <%= set[:weight] %>

  <hr>
<%- end %>



<div class="grid grid-cols-1 gap-5 sm:grid-cols-3">
  <h3 class="text-5xl font-semibold col-span-2 leading-6 text-gray-900"><%= @workout[:date].strftime("%A %B %-d, %Y")  %></h3>
  <a href="/workouts/<%= @workout[:id] %>/sets/new" type="button" class="inline-flex items-center gap-x-1.5 rounded-md bg-gray-500 hover:bg-lime-500 px-2.5 py-1.5 text-sm font-semibold text-white shadow-sm focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
      <path fill-rule="evenodd" d="M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25zM12.75 9a.75.75 0 00-1.5 0v2.25H9a.75.75 0 000 1.5h2.25V15a.75.75 0 001.5 0v-2.25H15a.75.75 0 000-1.5h-2.25V9z" clip-rule="evenodd" />
    </svg>


    Add new set
  </a>
</div>
<dl class="mt-5 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
  <%- @array_of_exercise_ids.each do | exercise_id | %>
    <div class="relative overflow-hidden rounded-lg bg-white px-4 pb-12 pt-5 shadow sm:px-6 sm:pt-6">
      <dt>
        <div class="absolute rounded-md bg-lime-500 p-3">
          <svg class="h-8 w-8 text-white" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 19.128a9.38 9.38 0 002.625.372 9.337 9.337 0 004.121-.952 4.125 4.125 0 00-7.533-2.493M15 19.128v-.003c0-1.113-.285-2.16-.786-3.07M15 19.128v.106A12.318 12.318 0 018.624 21c-2.331 0-4.512-.645-6.374-1.766l-.001-.109a6.375 6.375 0 0111.964-3.07M12 6.375a3.375 3.375 0 11-6.75 0 3.375 3.375 0 016.75 0zm8.25 2.25a2.625 2.625 0 11-5.25 0 2.625 2.625 0 015.25 0z" />
          </svg>
        </div>
        <a href="/exercises/<%= exercise_id %>" class="ml-20 truncate text-5xl text-gray-500 hover:text-lime-500"><%= Exercise[exercise_id].name %></a>
      </dt>
      <dd class="mt-8 flex items-baseline pb-6 sm:pb-7">
        <p class="text-2xl font-semibold text-gray-900">71,897</p>
        <p class="ml-2 flex items-baseline text-sm font-semibold text-green-600">
          <svg class="h-5 w-5 flex-shrink-0 self-center text-green-500" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 17a.75.75 0 01-.75-.75V5.612L5.29 9.77a.75.75 0 01-1.08-1.04l5.25-5.5a.75.75 0 011.08 0l5.25 5.5a.75.75 0 11-1.08 1.04l-3.96-4.158V16.25A.75.75 0 0110 17z" clip-rule="evenodd" />
          </svg>
          <span class="sr-only"> Increased by </span>
          122
        </p>
        <div class="absolute inset-x-0 bottom-0 bg-gray-50 px-4 py-4 sm:px-6">
          <div class="text-sm">
            <a href="/exercises/<%= exercise_id %>" class="font-medium text-indigo-600 hover:text-indigo-500">View this exercise</a>
          </div>
        </div>
      </dd>
    </div>
  <%- end %>
</dl>

